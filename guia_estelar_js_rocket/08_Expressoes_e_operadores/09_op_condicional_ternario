//operadores Condicional (Ternário)

//dependendo da condição, nós receberemos 
//valores diferentes

//Condição então o valor 1 se não valor 2
//condition ? value : value2

//exemplos
// Café da manhã  top
let pao = true
let queijo = false

const niceBreakfast = pao  || queijo ? 'Café top' : 'Café ruim'
console.log(niceBreakfast)

//Maior de 18
let age = 18                   //aqui poderia ser arrays obj, functions
const canDrive = age >= 18 ? 'can Drive' : 'cannot drive'
console.log(canDrive)
